{
  "extends": ["group:monorepos", "packages:postcss"],
  "masterIssue": true,
  "automerge": false,
  "prConcurrentLimit": 3,
  "separateMajorMinor": false,
  "patch": {
    "labels": ["dependency-update"]
  },
  "minor": {
    "labels": ["dependency-update"]
  },
  "major": {
    "labels": ["dependency-update"]
  },
  "digest": {
    "labels": ["dependency-update"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["@storybook"],
      "groupName": "storybook",
      "rangeStrategy": "bump"
    },
    {
      "matchPackagePatterns": ["@babel", "babel"],
      "groupName": "babel",
      "rangeStrategy": "bump"
    },
    {
      "packageNames": ["autoprefixer", "icss-utils"],
      "matchPackagePatterns": ["^postcss"],
      "groupName": "postcss",
      "rangeStrategy": "replace"
    },
    {
      "packageNames": ["@testing-library"],
      "matchPackagePatterns": ["^@testing-library"],
      "groupName": "testing-library",
      "rangeStrategy": "replace"
    },
    {
      "matchPackagePatterns": ["@proof-ui"],
      "groupName": "proof"
    },
    {
      "matchPackagePatterns": ["@reach"],
      "groupName": "reach"
    },
    {
      "matchPackagePatterns": ["auto", "@auto-it"],
      "groupName": "auto",
      "excludePackageNames": ["autoprefixer"]
    },
    {
      "extends": "packages:linters",
      "matchPackagePatterns": ["^eslint"],
      "groupName": "linters"
    },
    {
      "matchPackagePatterns": ["stylelint"],
      "groupName": "stylelint"
    }
  ]
}
