{
  "extends": ["group:monorepos"],
  "automerge": false,
  "patch": {
    "labels": ["dependency-update"]
  },
  "minor": {
    "labels": ["dependency-update"]
  },
  "major": {
    "labels": ["dependency-update"]
  },
  "digest": {
    "labels": ["dependency-update"]
  },
  "packageRules": [
    {
      "packagePatterns": ["@proof-ui"],
      "groupName": "proof"
    },
    {
      "packagePatterns": ["@reach"],
      "groupName": "reach"
    },
    {
      "packagePatterns": ["auto", "@auto-it"],
      "groupName": "auto"
    },
    {
      "extends": "packages:linters",
      "groupName": "linters"
    }
  ]
}
