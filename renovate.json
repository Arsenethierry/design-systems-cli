{
  "extends": ["group:monorepos", "packages:postcss", "packages:linters"],
  "automerge": false,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "patch": {
    "labels": ["dependency-update"]
  },
  "minor": {
    "labels": ["dependency-update"]
  },
  "major": {
    "labels": ["dependency-update"]
  },
  "digest": {
    "labels": ["dependency-update"]
  },
  "packageRules": [
    {
      "packagePatterns": ["@proof-ui"],
      "groupName": "proof"
    },
    {
      "packagePatterns": ["@reach"],
      "groupName": "reach"
    },
    {
      "packagePatterns": ["auto", "@auto-it"],
      "groupName": "auto",
      "excludePackageNames": ["autoprefixer"]
    }
  ]
}
